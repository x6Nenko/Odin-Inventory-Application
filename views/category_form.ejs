<%- include('header'); -%>
  <h1><%= title %></h1>

  <form method="POST" action="">
    <div>
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" placeholder="Category name" required value="<%= category !== undefined ? category.name : "" %>">
    </div>

    <div>
      <label for="description">Description:</label>
      <textarea name="description" id="description" rows="3" placeholder="Category description" required></textarea>
    </div>

    <button type="submit">Submit</button>
  </form>

  <% if (errors) { %>
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }); %>
    </ul>
  <% } %>

<%- include('footer'); -%>